#!/usr/bin/env php
<?php

declare (strict_types=1);

use Tcds\Io\Player\LayerChecker;
use Tcds\Io\Player\ModulesChecker;

$paths = [
    realpath(__DIR__ . '/../../..'),
    realpath(__DIR__ . '/../..'),
    realpath(__DIR__ . '/..'),
    realpath(__DIR__ . '/'),
];

$_config = ['modules' => []];

foreach ($paths as $path) {
    $autoload = "$path/autoload.php";
    $config = "$path/player.json";

    if (is_file($autoload)) include $autoload;;
    if (is_file($config)) include array_push($_config, ...require $config);;
}

$layerChecker = new LayerChecker();
$moduleChecker = new ModulesChecker($layerChecker);
$moduleChecker->check($_config);
